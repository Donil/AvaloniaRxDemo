<Window xmlns="https://github.com/avaloniaui"
        xmlns:views="clr-namespace:AvaloniaRxDemo.Views;assembly=AvaloniaRxDemo"
        MinWidth="500"
        MinHeight="300">
  <Grid
    ColumnDefinitions="0.3*,*"
    RowDefinitions="*,Auto">
    <views:TodoItemsListView Grid.Row="0"
                             Grid.Column="0">
    </views:TodoItemsListView>
    <views:CreateTodoItemView Grid.Row="1"
                              Grid.Column="0">
    </views:CreateTodoItemView>

    <views:TodoItemsDetailsView Grid.Row="0"
                                Grid.Column="1">
    </views:TodoItemsDetailsView>

    <views:StatisticView Grid.Row="1"
                         Grid.Column="1">
    </views:StatisticView>
  </Grid>
</Window>