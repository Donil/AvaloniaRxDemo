<UserControl xmlns="https://github.com/avaloniaui">
    <Grid RowDefinitions="Auto,Auto,Auto,*"
          ColumnDefinitions="Auto,*">
        <TextBlock Grid.Row="0"
                   Grid.Column="0">
            Id:
        </TextBlock>
        <TextBox Grid.Row="0"
                 Grid.Column="1"
                 Text="{Binding CurrentTodoItem^.Id}">
        </TextBox>

        <TextBlock Grid.Row="1"
                   Grid.Column="0">
            Name:
        </TextBlock>
        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Text="{Binding CurrentTodoItem^.Name}">
        </TextBox>

        <TextBlock Grid.Row="2"
                   Grid.Column="0">
            Name:
        </TextBlock>
        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Text="{Binding CurrentTodoItem^.Duration}">
        </TextBox>


        <TextBlock Grid.Row="3"
                   Grid.Column="0">
            Description:
        </TextBlock>
        <TextBox Grid.Row="3"
                 Grid.Column="1"
                 AcceptsReturn="True"
                 Text="{Binding CurrentTodoItem^.Description}">
        </TextBox>
    </Grid>
</UserControl>